  <script>
    function calculateResult() {
      const form = document.forms['quizForm'];
      let score = 0;

      for (let i = 1; i <= 6; i++) {
        const answer = form['q' + i].value;
        if (answer === 'yes') score++;
      }

      const resultBox = document.getElementById('resultBox');

      if (score >= 3) {
        resultBox.innerHTML = `‚ö†Ô∏è You may have signs of PCOS/PCOD. Please consult a doctor.<br>
        Use <strong class="tag">#CheckOva25</strong> online to find support, guidance & resources.`;
      } else {
        resultBox.innerHTML = `‚úÖ You may not have major symptoms, but always track your health.<br>
        Explore more using <strong class="tag">#CheckOva25</strong>.`;
      }
    }
  </script>

